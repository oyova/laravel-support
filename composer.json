{
    "name": "oyova/laravel-support",
    "description": "General support functionality for Oyova Laravel projects.",
    "type": "project",
    "license": "MIT",
    "autoload": {
        "psr-4": {
            "Oyova\\LaravelSupport\\": "src/"
        },
        "files": [
            "src/helpers.php",
            "src/macros.php"
        ]
    },
    "require": {
        "php": ">=7.4,<8.3"
    },
    "require-dev": {
        "oyova/php-cs-fixer": "^1.2",
        "pestphp/pest": "^1.22",
        "symfony/var-dumper": "^5.4"
    },
    "config": {
        "optimize-autoloader": true,
        "preferred-install": "dist",
        "sort-packages": true,
        "allow-plugins": {
            "pestphp/pest-plugin": true
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
